<UserControl x:Class="GreeniumPrototype.BookmarkItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GreeniumPrototype"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="180">
    <Grid Background="White">
        <Label x:Name="LinkLabel" Content="{Binding Path=Link}" HorizontalAlignment="Left" VerticalAlignment="Top" Height="25" FontFamily="Arial" FontSize="10" Margin="0,5,0,0"/>
        <Button x:Name="RemoveBtn" Content="X" HorizontalAlignment="Left" Margin="160,0,0,0" VerticalAlignment="Top" Width="20" Height="30" Background="White"/>

    </Grid>
</UserControl>
