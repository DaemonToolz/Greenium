<UserControl x:Class="GreeniumPrototype.BookmarkItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GreeniumPrototype"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="180">
    <Grid Background="White">
        <Image x:Name="SiteIcon" Source="{Binding Path=Favicon}" Width="20" Height="20" VerticalAlignment="Center" HorizontalAlignment="Left"></Image>
        <Label x:Name="LinkLabel" Content="{Binding Path=Link}" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" FontFamily="Arial" FontSize="10" Margin="25,0,0,0" Width="128"/>
        <Button x:Name="RemoveBtn" Content="X" VerticalAlignment="Center" Width="20" Height="30" Background="White" Click="RemoveBtn_Click" Margin="160,0,0,0.4" BorderThickness="0"/>

    </Grid>
</UserControl>
