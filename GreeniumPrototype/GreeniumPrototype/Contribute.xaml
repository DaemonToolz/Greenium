        <TextBlock x:Name="textBlock_Copy2" HorizontalAlignment="Left" Margin="140,308,0,0" TextWrapping="Wrap" Text="0€" VerticalAlignment="Top" Width="60"/>
        <TextBlock x:Name="textBlock_Copy3" HorizontalAlignment="Left" Margin="0,394,0,0" TextWrapping="Wrap" Text="Total" VerticalAlignment="Top" Width="140"/>
        <TextBlock x:Name="textBlock_Copy4" HorizontalAlignment="Left" Margin="140,394,0,0" TextWrapping="Wrap" Text="0€" VerticalAlignment="Top" Width="60"/>

